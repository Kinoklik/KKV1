

<div class="container my-5">

  <div class="row">
    <div class="col-md-12">
      <div class="card-form">
        <div class="card-form-display form-border">
        <h3 class="title text-center"> Edit Movie</h3>
        <%= simple_form_for(@movie) do |f| %>
          <%= f.input :title %>
          <%= f.input :description %>
          <%= f.input :language %>
          <%= f.input :release_date, as: :date %>
          <%= f.button :submit, class: "btn rounded forgot-pass edit-movie" %>
        <% end %>
        </div>
      </div>
    </div>
  </div>

</div>