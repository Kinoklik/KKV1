<div class="container my-5">

  <div class="row">
    <div class="col-md-12">
      <div class="card-form">
        <div class="card-form-display form-border">
        <h3 class="title"> Add a New Movie</h3>
          <%= simple_form_for(@movie) do |f| %>
            <%= f.input :title, as: :string, placeholder: "Movie Title", label: "Movie Title" %>
            <%= f.input :description, as: :text, placeholder: "Write down a description of your Movie", label: "Movie Description" %>
            <%= f.input :language, as: :string, placeholder: "Language", label: 'What is the language of the Movie?' %>
            <%= f.input :release_date, as: :date, placeholder: "Release Date", label: "What is the release date?" %>
            <%= f.file_field :image, class: "movie-image", required: true %>
            <div class="btn-container">
            <%= f.submit "Create", class: "btn rounded forgot-pass"%>
            </div>
          <% end %>
        </div>
      </div>
      <div class="mt-5 text-right"><%= link_to "GO TO ALL MOVIES", movies_path, class: "btn btn-light active" %></div>
    </div>
  </div>

</div>
